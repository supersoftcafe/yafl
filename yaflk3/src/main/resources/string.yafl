
module System

import Io

class String(_size: Int16, _data[Int32(_size) <= 1024]) {
  fun at(index: Int32) => _data[_size]
  fun size(): Int32 => Int32(_size)
}


fun print(value: String, index: Int32): Int32 => index < value.size() ? putchar(value.at(0)) + print(value, index + 1) : 0

fun print(value: String): Int32 => print(value, 0)

