
module System

# Conversions
fun `=`(a:System.Int8 ):System.Int16 = __builtin__ convert_i1_to_i2(a)
fun `=`(a:System.Int16):System.Int32 = __builtin__ convert_i2_to_i4(a)
fun `=`(a:System.Int32):System.Int64 = __builtin__ convert_i4_to_i8(a)
fun `=`(a:System.Float32):System.Float64 = __builtin__ convert_f4_to_f8(a)


# Implement the rule that any type is the tuple of itself
# fun <X> `=`(a:(x:X)):X = a.x
# fun <X> `=`(a:X):(X) = (a.x)


# Operators
fun `+`(a:System.Int8 , b:System.Int8 ):System.Int8  = __builtin__ add_i1(a, b)
fun `+`(a:System.Int16, b:System.Int16):System.Int16 = __builtin__ add_i2(a, b)
fun `+`(a:System.Int32, b:System.Int32):System.Int32 = __builtin__ add_i4(a, b)
fun `+`(a:System.Int64, b:System.Int64):System.Int64 = __builtin__ add_i8(a, b)
fun `+`(a:System.Float32, b:System.Float32):System.Float32 = __builtin__ add_f4(a, b)
fun `+`(a:System.Float64, b:System.Float64):System.Float64 = __builtin__ add_f8(a, b)

